{
  "name": "mubarakway-sadaqa",
  "version": "1.0.0",
  "description": "Садака-Пасс - Telegram Mini App для благотворительности",
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:backend": "cd backend && uvicorn main:app --reload",
    "dev:bot": "cd bot && python main.py",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && uvicorn main:app --host 0.0.0.0 --port 8000"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

